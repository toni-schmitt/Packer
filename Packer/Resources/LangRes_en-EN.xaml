<!-- ResourceDictionary for Enlgish Langauge -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Packer.Resources"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:String x:Key="header">Packer - make your files smaller today</system:String>

    <system:String x:Key="chooseFile">Choose file</system:String>
    <system:String x:Key="chooseFileTip">Choose files you want to decode or encode</system:String>
    <system:String x:Key="chooseFileNew">Choose new file</system:String>

    <system:String x:Key="destDir">Destination Directory</system:String>
    <system:String x:Key="destDirTip">Optional: Click to change the output directory.</system:String>

    <system:String x:Key="destName">Destination Name</system:String>
    <system:String x:Key="destNameTip">Optional: Type in a desired name for your output file.</system:String>

    <system:String x:Key="encode">Encode</system:String>

    <system:String x:Key="decode">Decode</system:String>

</ResourceDictionary>